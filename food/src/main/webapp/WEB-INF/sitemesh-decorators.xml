<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/views/common">

 <!-- 제외할 패턴 -->
 <excludes>
  <pattern>/auth.do</pattern>
  <pattern>/nutrition/n_view?food_code=*</pattern>
  <pattern>/recipe_info/recipe_info_content?recipe_name=*</pattern>
  <pattern>/price/one_price?food_name=*</pattern>

 </excludes>
 <!-- 기본 패턴 -->
 <decorator name="default" page="default.jsp">
  <pattern>*</pattern> 
 </decorator>
 <!-- 모바일 패턴 -->
 <decorator name="mobileDefault" page="mobileDefault.jsp">
  <pattern>/m.*.do</pattern> 
 </decorator>
</decorators>
